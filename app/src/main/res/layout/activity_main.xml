<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:id="@+id/id">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="5dp"
        card_view:contentPadding="10dp"
        card_view:elevation= "10dp"
        android:elevation="15dp"
        android:enabled="true"
        android:focusable="true"
        android:layout_marginTop="10dp"
        android:layout_above="@+id/call"
        android:layout_alignLeft="@+id/call"
        android:layout_alignStart="@+id/call"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="4dp"
        android:layout_marginLeft="4dp"
        android:layout_toStartOf="@+id/button"
        android:layout_alignRight="@+id/caca"
        android:layout_alignEnd="@+id/caca"
        android:clickable="true">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/hhola">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:textSize="35dp"
                android:lines="1"
                android:longClickable="false"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:gravity="bottom|end"
                android:autoText="false"
                android:fontFamily="@string/abc_action_bar_home_subtitle_description_format" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/caca"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:text="1"
            android:id="@+id/uno"
            android:layout_row="0"
            android:layout_column="0"
            android:textSize="21dp"
            android:onClick="calcula"
            android:nestedScrollingEnabled="true"
            android:gravity="center" />

        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:text="2"
            android:id="@+id/dos"
            android:layout_row="0"
            android:layout_column="1"
            android:textSize="21dp"
            android:onClick="calcula"
            android:gravity="center" />

        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:text="3"
            android:id="@+id/tres"
            android:layout_row="0"
            android:layout_column="2"
            android:textSize="21dp"
            android:onClick="calcula"
            android:gravity="center" />

        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:text="4"
            android:id="@+id/cuatro"
            android:layout_row="1"
            android:layout_column="0"
            android:textSize="21dp"
            android:onClick="calcula"
            android:gravity="center" />

        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:text="5"
            android:id="@+id/cinco"
            android:layout_row="1"
            android:layout_column="1"
            android:textSize="21dp"
            android:onClick="calcula"
            android:gravity="center"
            android:padding="0dp" />

        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:text="6"
            android:id="@+id/seis"
            android:layout_row="1"
            android:layout_column="2"
            android:textSize="21dp"
            android:onClick="calcula"
            android:gravity="center" />

        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:text="-"
            android:id="@+id/menos"
            android:layout_row="1"
            android:layout_column="3"
            android:textSize="21dp"
            android:onClick="calcula"
            android:gravity="center"
            android:backgroundTint="#ac607d8b" />

        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:text="7"
            android:id="@+id/siete"
            android:layout_row="2"
            android:layout_column="0"
            android:textSize="21dp"
            android:onClick="calcula"
            android:gravity="center" />

        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:text="8"
            android:id="@+id/ocho"
            android:layout_row="2"
            android:layout_column="1"
            android:textSize="21dp"
            android:onClick="calcula"
            android:gravity="center" />

        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:text="9"
            android:id="@+id/nueve"
            android:layout_row="2"
            android:layout_column="2"
            android:textSize="21dp"
            android:onClick="calcula"
            android:gravity="center" />

        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:text="*"
            android:id="@+id/por"
            android:layout_row="2"
            android:layout_column="3"
            android:textSize="21dp"
            android:onClick="calcula"
            android:layout_gravity="center"
            android:gravity="center"
            android:backgroundTint="#ac607d8b" />

        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:text="C"
            android:id="@+id/ce"
            android:layout_row="3"
            android:layout_column="0"
            android:textSize="21dp"
            android:onClick="reset"
            android:gravity="center"
            android:backgroundTint="#ac607d8b" />

        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:text="0"
            android:id="@+id/cero"
            android:layout_row="3"
            android:layout_column="1"
            android:textSize="21dp"
            android:onClick="calcula"
            android:gravity="center" />

        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:text="="
            android:id="@+id/igual"
            android:layout_row="3"
            android:layout_column="2"
            android:textSize="21dp"
            android:onClick="igual"
            android:gravity="center"
            android:backgroundTint="#ac607d8b" />

        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:text="/"
            android:id="@+id/entre"
            android:layout_row="3"
            android:layout_column="3"
            android:textSize="21dp"
            android:onClick="calcula"
            android:gravity="center"
            android:backgroundTint="#ac607d8b" />

        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:text="+"
            android:id="@+id/mas"
            android:layout_row="0"
            android:layout_column="3"
            android:textSize="21dp"
            android:onClick="calcula"
            android:gravity="center"
            android:backgroundTint="#ac607d8b" />
    </GridLayout>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Call"
        android:id="@+id/call"
        android:onClick="llama"
        android:nestedScrollingEnabled="true"
        android:layout_above="@+id/caca"
        android:layout_alignLeft="@+id/caca"
        android:layout_alignStart="@+id/caca"
        android:gravity="center" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WEB"
        android:id="@+id/button"
        android:onClick="web"
        android:layout_above="@+id/caca"
        android:layout_alignRight="@+id/caca"
        android:layout_alignEnd="@+id/caca"
        android:gravity="center" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ans"
        android:id="@+id/ans"
        android:layout_alignTop="@+id/button"
        android:layout_toRightOf="@+id/call"
        android:onClick="ansjeje"
        android:layout_toLeftOf="@+id/button"
        android:layout_toStartOf="@+id/button"
        android:nestedScrollingEnabled="true"
        android:gravity="center" />

</RelativeLayout>
