<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.hermes.calk.Memory">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Intentos: "
                android:id="@+id/textView8"
                android:textSize="30dp"
                android:padding="1dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView10"
                android:textSize="30dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/uno_uno"
                android:src="@drawable/card"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:padding="1dp"
                android:onClick="Clic" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/uno_dos"
                android:src="@drawable/card"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:padding="1dp"
                android:onClick="Clic" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/uno_tres"
                android:src="@drawable/card"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:padding="1dp"
                android:onClick="ClicUnoTres" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/uno_cuatro"
                android:src="@drawable/card"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:padding="1dp"
                android:onClick="Clic" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/dos_uno"
                android:src="@drawable/card"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:padding="1dp"
                android:onClick="Clic" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/dos_dos"
                android:src="@drawable/card"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:padding="1dp"
                android:onClick="Clic" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/dos_tres"
                android:src="@drawable/card"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:padding="1dp"
                android:onClick="Clic" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/dos_cuatro"
                android:src="@drawable/card"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:padding="1dp"
                android:onClick="Clic" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/tres_uno"
                android:src="@drawable/card"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:padding="1dp"
                android:onClick="Clic" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/tres_dos"
                android:src="@drawable/card"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:padding="1dp"
                android:onClick="Clic" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/tres_tres"
                android:src="@drawable/card"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:padding="1dp"
                android:onClick="Clic" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/tres_cuatro"
                android:src="@drawable/card"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:padding="1dp"
                android:onClick="Clic" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/cuatro_uno"
                android:src="@drawable/card"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:padding="1dp"
                android:onClick="Clic" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/cuatro_dos"
                android:src="@drawable/card"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:padding="1dp"
                android:onClick="Clic" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/cuatro_tres"
                android:src="@drawable/card"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:padding="1dp"
                android:onClick="Clic" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/cuatro_cuatro"
                android:src="@drawable/card"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:padding="1dp"
                android:onClick="Clic" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
